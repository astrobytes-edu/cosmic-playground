---
import TagPill from "./TagPill.astro";
import TopicIcon from "./TopicIcon.astro";

export type DemoCardProps = {
  title: string;
  href: string;
  description: string;
  status: "stable" | "beta" | "draft";
  topics: string[];
  levels: string[];
  timeMinutes: number;
  hasMathMode: boolean;
};

const {
  title,
  href,
  description,
  status,
  topics,
  levels,
  timeMinutes,
  hasMathMode
} = Astro.props as DemoCardProps;
---

<article class="demo-card cp-card">
  <a class="demo-card__link" href={href}>
    <header class="demo-card__header">
      <h3>{title}</h3>
      <div class="demo-card__meta">
        <TagPill
          label={status}
          tone={status === "stable" ? "teal" : status === "beta" ? "default" : "magenta"}
        />
        {hasMathMode ? <TagPill label="math mode" tone="violet" /> : null}
      </div>
    </header>

    <p class="demo-card__desc">{description}</p>

    <footer class="demo-card__footer">
      <div class="demo-card__badges" aria-label="Tags">
        {topics.map((t) => (
          <TagPill label={t} tone="blue">
            <TopicIcon slot="icon" topic={t} />
          </TagPill>
        ))}
        {levels.map((l) => <TagPill label={l} tone="default" />)}
        <TagPill label={`${timeMinutes} min`} tone="default" />
      </div>
    </footer>
  </a>
</article>

<style>
  .demo-card {
    border-radius: var(--cp-r-3);
    overflow: clip;
  }

  .demo-card__link {
    display: block;
    padding: 14px;
    text-decoration: none;
  }

  .demo-card__link:hover {
    background: rgba(255, 255, 255, 0.03);
  }

  .demo-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 12px;
  }

  h3 {
    margin: 0;
    font-size: 1.1rem;
  }

  .demo-card__meta {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .demo-card__desc {
    margin: 10px 0 0;
    color: var(--cp-muted);
    max-width: 72ch;
  }

  .demo-card__footer {
    margin-top: 12px;
  }

  .demo-card__badges {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
</style>
