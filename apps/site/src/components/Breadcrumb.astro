---
/**
 * Breadcrumb navigation for sub-pages.
 * Renders: Home > Section > Current Page
 *
 * Usage:
 *   <Breadcrumb crumbs={[
 *     { label: "Explore", href: withBase("explore/") },
 *     { label: "Kepler's Laws" }
 *   ]} withBase={withBase} />
 */
import { ChevronRight } from "@lucide/astro";

interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  crumbs: Crumb[];
  withBase: (path: string) => string;
}

const { crumbs, withBase } = Astro.props;
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol class="breadcrumb__list">
    <li class="breadcrumb__item">
      <a href={withBase("")} class="breadcrumb__link">Home</a>
      <ChevronRight size={14} aria-hidden="true" class="breadcrumb__sep" />
    </li>
    {crumbs.map((crumb, i) => (
      <li class="breadcrumb__item">
        {crumb.href ? (
          <>
            <a href={crumb.href} class="breadcrumb__link">{crumb.label}</a>
            {i < crumbs.length - 1 && (
              <ChevronRight size={14} aria-hidden="true" class="breadcrumb__sep" />
            )}
          </>
        ) : (
          <span class="breadcrumb__current" aria-current="page">{crumb.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb {
    margin-bottom: var(--cp-space-4);
  }

  .breadcrumb__list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--cp-space-1);
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: var(--cp-text-sm);
  }

  .breadcrumb__item {
    display: flex;
    align-items: center;
    gap: var(--cp-space-1);
  }

  .breadcrumb__link {
    color: var(--cp-muted);
    text-decoration: none;
    transition: color var(--cp-transition-fast) var(--cp-ease-out);
  }

  .breadcrumb__link:hover {
    color: var(--cp-link-hover);
  }

  .breadcrumb__sep {
    color: var(--cp-faint);
    flex-shrink: 0;
  }

  .breadcrumb__current {
    color: var(--cp-text2);
    font-weight: var(--cp-font-medium);
  }
</style>
