      <path d="M18.5 4.8 V6.6" />
      <path d="M17.6 5.7 H19.4" />
    </>
  ) : null}

  {name === "featured" ? (
    <>
      <path d="M7 4.5 H17 V20 L12 17.2 L7 20 Z" />
      <path d="M12 7 V9.2" />
      <path d="M11 8.1 H13" />
    </>
  ) : null}

  {name === "instructor" ? (
    <>
      <circle cx="8.2" cy="8.0" r="1.6" />
