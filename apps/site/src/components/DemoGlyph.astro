  {name === "lab" ? (
    <>
      <path d="M10 4.5 V10.0 L6.8 18.8 C6.5 19.6, 7.1 20.5, 8.0 20.5 H16.0 C16.9 20.5, 17.5 19.6, 17.2 18.8 L14.0 10.0 V4.5" />
      <path d="M9 4.5 H15" />
