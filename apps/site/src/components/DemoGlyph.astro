      <path d="M6 19 H18" />
      <path d="M6 19 V17.6" />
      <path d="M18 19 V17.6" />
    </>
  ) : null}

  {name === "motion" ? (
    <>
      <path d="M16.5 8.3 A6.5 6.5 0 1 0 8.3 16.5" />
      <path d="M8.3 16.5 L8.6 14.9" />
